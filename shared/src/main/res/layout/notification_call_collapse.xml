<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:minHeight="64dp">

    <!-- Caller Image -->
    <ImageView
        android:id="@+id/image_caller_collapse"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:src="@drawable/unknownavatar"
        android:contentDescription="Caller Image" />

    <!-- Accept Button -->
    <ImageButton
        android:id="@+id/btn_accept_collapse"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toStartOf="@id/btn_reject_collapse"
        android:layout_marginEnd="6dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_accept_call"
        android:contentDescription="Accept"
        android:scaleType="fitCenter" />

    <!-- Accept Button -->
    <ImageButton
        android:id="@+id/btn_reject_collapse"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_reject_call"
        android:contentDescription="Reject"
        android:scaleType="fitCenter" />

    <!-- Caller Name -->
    <TextView
        android:id="@+id/text_caller_name_collapse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_caller_collapse"
        android:layout_toStartOf="@id/btn_reject_collapse"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Caller"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
</RelativeLayout>
